<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e192d"
    android:fitsSystemWindows="true">

    <!-- Background Particle Effect -->
    <com.hejman.dx1221_ica1_project.MainMenu_Particle
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Game view -->
    <com.hejman.dx1221_ica1_project.GameLogic
        android:id="@+id/game_logic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar_image" />

    <!-- Bottom Bar Image -->
    <ImageView
        android:id="@+id/bottom_bar_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ui_bottombar"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Score display -->
    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/instruction_text"
        app:layout_constraintLeft_toLeftOf="@+id/bottom_bar_image"
        app:layout_constraintRight_toRightOf="@+id/bottom_bar_image"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar_image"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginBottom="8dp" />

    <!-- Instruction text -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the nodes to travel through the network!"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_bar_image"
        app:layout_constraintLeft_toLeftOf="@+id/bottom_bar_image"
        app:layout_constraintRight_toRightOf="@+id/bottom_bar_image"
        app:layout_constraintTop_toTopOf="@+id/bottom_bar_image"
        app:layout_constraintVertical_bias="0.95"
        android:layout_marginBottom="8dp" />

    <!-- Quit button -->
    <Button
        android:id="@+id/quit_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_style"
        android:text="QUIT"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>